<%= will_paginate %>
<div role="tabpanel" class="tab-pane wow" id="collections">
<% @categories.each do |category| %>
  <section class="collections">
    <div class="row">
      <div class="collection col-sm-4 col-xs-6">
        <%= link_to category_path(category), class:"content text-center" do %>
          <%= image_tag category.avatar.url, class:"img-responsive" %>
            <div class="caption">
              <h3><%= "#{category.name}" %></h3>
                <span class="btn btn-lg btn-outline btn-default"><%= pluralize(category.articles.count, "Article") %></span>
            </div>
          <% end %>
      </div>
    </div>
  </section>
<% end %>
</div>
<%= will_paginate %>
