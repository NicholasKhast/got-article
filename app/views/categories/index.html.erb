<div id="wrapper">
<!-- Sidebar -->
  <div id="sidebar-wrapper">
    <div class="sidebar-nav">
      <div class="content text-center wow distance_from_top">
        <h1>CATEGORIES</h1>
        <p style="margin-top:60px;">
          <% if logged_in? and current_user.admin? %>
            <%=link_to "NEW CATEGORY", new_category_path, {:style => "margin:5px;", :class => "btn btn-outline btn-artp btn-lg"} %>
          <% end %>
          <%=link_to "ARTICLES", articles_path, {:style => "margin:5px;", :class => "btn btn-outline btn-artp btn-lg"} %>
          <%=link_to "HOME", root_path, {:style => "margin:5px;", :class => "btn btn-outline btn-artp btn-lg"} %>
        </p>
      </div>
    </div>
  </div>
  <!-- /#sidebar-wrapper -->
  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="center" style="padding-bottom:10px">
            <%= will_paginate %>
          </div>
<div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-4 portfolio-item thumbnail">
      <%= link_to category_path(category) do%>
        <%= image_tag (category.avatar.url) %>
        <h3 class="text-center">
          <%= category.name %>
        </h3>
        <p class="text-center">
          <span class="btn btn-outline btn-primary btn-lg"><%= pluralize(category.articles.count, "Article") %></span>
        </p>
        <p class="text-center">
          <% if logged_in? and current_user.admin? %>
            <%=link_to "EDIT CATEGORY", edit_category_path(category), {:style => "margin:5px;", :class => "btn btn-outline btn-warning btn-lg"} %>
          <% end %>
        </p>
      <% end %>    
    </div>
  <% end %>
</div>
        </div>
      </div>
    </div>
  </div>
  <!-- /#page-content-wrapper -->
</div>






