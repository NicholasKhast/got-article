<div class="wrap">
  <div role="tabpanel" class="tab-pane wow" id="collections">
  <div class="floatleft floatleftPic">
    <div id="in" class="col-md-12">
      <header>
        <div class="content text-center wow distance_from_top">
          <h1 class="center">CATEGORIES</h1>
          <p style="margin-top:60px;">
            <% if logged_in? and current_user.admin? %>
              <%=link_to "NEW CATEGORY", new_category_path, {:style => "margin:5px;", :class => "btn btn-outline btn-artp btn-lg"} %>
            <% end %>
            <%=link_to "ARTICLES", articles_path, {:style => "margin:5px;", :class => "btn btn-outline btn-artp btn-lg"} %>
            <%=link_to "HOME", root_path, {:style => "margin:5px;", :class => "btn btn-outline btn-artp btn-lg"} %>

          </p>
          
        </div>
      </header>
    </div>
  </div>
  <div class="floatright">
    <div style="margin-top:40px;">
      <div class="center">
        <%= will_paginate %>
      </div>
      <section class="collections" style="margin-top:-50px;">
    <div class="row">
      
      <% @categories.each do |category| %>
        <div class="collection col-sm-4 col-xs-6">
          <%= link_to category_path(category), class:"content text-center" do %>
            <%= image_tag category.avatar.url, class:"img-responsive" %>
            <div class="caption">
              <h3 id="yellowColor"><%= "#{category.name}" %></h3>
                <span class="btn btn-lg btn-outline btn-default"><%= pluralize(category.articles.count, "Article") %>
                
                </span>

            </div>
          <% end %>
        </div>
      <% end %>
      
    </div>
  </section>
  
    </div>
  </div>
</div></div>




