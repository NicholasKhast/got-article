<div id="wrapperRR">
  <div id="sidebar-wrapperRR">
    <div class="sidebar-nav">
      <div class="content text-center wow distance_from_top">
        <h1>USERS</h1>
        <h2 style="margin-top:60px;">
          Welcome To Users Section
        </h2>
      </div>
    </div>
  </div>
  <div id="page-content-wrapperRR" style="float:right; margin-right:50px;">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="center" style="padding-bottom:10px">
            <%= will_paginate %>
          </div>
          <div class="row" style="margin-top:50px">
            <% @users.each do |user| %>
              <div class="col-sm-6 col-md-4 portfolio-item thumbnail">
                <%= link_to user_path(user) do%>
                  <div class="content"><%= image_tag (user.avatar.url), class:"image-responsive user-profile-users-index" %></div>
                  <h3 class="text-center">
                    <%= user.username %>
                  </h3>
                  <p class="text-center">
                    <span class="btn btn-outline btn-primary btn-lg"><%= pluralize(user.articles.count, "Article") %></span>
                  </p>
                  <p class="text-center">
                    <% if logged_in? and current_user.admin? %>
                      <%= link_to "DELETE", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user?"},  :class => "btn btn-danger btn-lg pdex" %>
                    <% end %>
                  </p>
                <% end %>    
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>






