<div id="wrapperRR">
  <div id="sidebar-wrapperRR">
    <div class="sidebar-nav">
      <div class="content text-center wow distance_from_top">
        <h1>USERS</h1>
        <p style="margin-top:60px;">
          <%=link_to "ARTICLES", articles_path, {:style => "margin:5px;", :class => "btn btn-outline btn-artp btn-lg"} %>
          <%=link_to "CATEGORIES", categories_path, {:style => "margin:5px;", :class => "btn btn-outline btn-artp btn-lg"} %>
        </p>
      </div>
    </div>
  </div>
  <div id="page-content-wrapperRR" style="float:right; margin-right:50px;">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="center" style="padding-bottom:10px">
            <%= will_paginate %>
          </div>
          <div class="row">
            <% @users.each do |user| %>
              <div class="col-sm-6 col-md-4 portfolio-item thumbnail">
                <%= link_to user_path(user) do%>
                

                  <%= image_tag (user.avatar.url) %>
                 
                  <h3 class="text-center">
                    <%= user.username %>
                  </h3>
                  <p class="text-center">
                    <span class="btn btn-outline btn-primary btn-lg"><%= pluralize(user.articles.count, "Article") %></span>
                  </p>
                  <p class="text-center">
                    <% if logged_in? and current_user.admin? %>
                      <%= link_to "DELETE", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user?"}, :class => "btn btn-danger btn-lg" %>
                    <% end %>
                  </p>
                <% end %>    
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>






