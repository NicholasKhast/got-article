<div id="wrapperRR">
  <div id="sidebar-wrapperRR">
    <div class="sidebar-nav">
      <div class="content text-center wow distance_from_top">
        <%= image_tag (@user.avatar.url), class:"image-responsive user-profile-user-page" %>
        <h1><%= @user.username %></h1>
        <h4 align="center">Welcome to <%= @user.username %>'s page</h4>
        <p>
          <% if logged_in? && current_user == @user %>
            <%=link_to "NEW ARTICLE", new_article_path, {:class => "btn btn-outline btn-artp btn-lg"} %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div id="page-content-wrapperRR" style="float:right; margin-right:80px;">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="center"><%= will_paginate @user_articles %></div>
      <%= render 'articles/article', obj: @user_articles %>
        </div>
      </div>
    </div>
  </div>
</div>



